---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

/**
 * Code Example Page Template
 * 
 * This page renders individual code examples from the content/codeExamples collection.
 * 
 * HOW TO CREATE A CODE EXAMPLE:
 * 1. Create a new .md file in src/content/codeExamples/
 * 2. Add frontmatter with: title, description, date, and optional headerImage
 * 3. Write your content using markdown with code blocks
 * 
 * CODE BLOCK USAGE:
 * - Use ```html, ```css, ```js, etc. for syntax highlighting
 * - Code blocks automatically get proper padding and styling
 * - Inline code uses `backticks` for inline code styling
 * 
 * EXAMPLE FRONTMATTER:
 * ---
 * title: "Your Example Title"
 * description: "Brief description of what this example demonstrates"
 * date: "2024-12-19"
 * headerImage: "https://example.com/image.jpg" (optional)
 * ---
 */

export async function getStaticPaths() {
	const codeExamples = await getCollection('codeExamples');
	return codeExamples.map(example => ({
		params: { slug: example.slug },
		props: { example },
	}));
}

const { example } = Astro.props;
const { Content } = await example.render();

// Header image logic - uses provided image or generates a random one
const headerImage = example.data.headerImage || `https://source.unsplash.com/random/1200x320?sig=${Math.floor(Math.random()*1000)}`;
---

<BlogLayout title={example.data.title}>
	<!-- Page Header Section -->
	<section class="page-header">
		<h1>{example.data.title}</h1>
		<p class="page-description">{example.data.description}</p>
		<div class="page-meta">
			<time datetime={example.data.date}>{new Date(example.data.date).toLocaleDateString()}</time>
		</div>
	</section>

	<!-- Two Column Layout -->
	<div class="example-layout">
		<!-- Main Content Column (2/3 width) -->
		<main class="example-main">
			<article class="example-content">
				{headerImage && (
					<div class="example-header">
						<img src={headerImage} alt="" class="example-header-image" />
					</div>
				)}
				<div class="example-text" id="example-text">
					<Content />
				</div>
			</article>
		</main>

		<!-- Sidebar Column (1/3 width) -->
		<aside class="example-sidebar">
			<!-- WCAG Criteria Section -->
			<section class="sidebar-section">
				<h2>WCAG Criteria</h2>
				<ul class="wcag-list">
					{example.data.wcagCriteria?.map((criterion) => (
						<li>
							<a href={criterion.url} target="_blank" rel="noopener">
								{criterion.code}: {criterion.title}
							</a>
						</li>
					)) || (
						<li>No specific WCAG criteria listed</li>
					)}
				</ul>
			</section>

			<!-- Best Practices Section -->
			{example.data.bestPractices && (
				<section class="sidebar-section">
					<h2>Best Practices</h2>
					<ul class="practices-list">
						{example.data.bestPractices.map((practice) => (
							<li>{practice}</li>
						))}
					</ul>
				</section>
			)}

			<!-- Who Benefits Section -->
			{example.data.whoBenefits && (
				<section class="sidebar-section">
					<h2>Who Benefits</h2>
					<ul class="benefits-list">
						{example.data.whoBenefits.map((benefit) => (
							<li>{benefit}</li>
						))}
					</ul>
				</section>
			)}

			<!-- Related Resources -->
			{example.data.relatedResources && (
				<section class="sidebar-section">
					<h2>Related Resources</h2>
					<ul class="resources-list">
						{example.data.relatedResources.map((resource) => (
							<li>
								<a href={resource.url} target="_blank" rel="noopener">
									{resource.title}
								</a>
							</li>
						))}
					</ul>
				</section>
			)}

			<!-- Testing Tools -->
			{example.data.testingTools && (
				<section class="sidebar-section">
					<h2>Testing Tools</h2>
					<ul class="tools-list">
						{example.data.testingTools.map((tool) => (
							<li>
								<a href={tool.url} target="_blank" rel="noopener">
									{tool.title}
								</a>
							</li>
						))}
					</ul>
				</section>
			)}
		</aside>
	</div>
</BlogLayout>

<style>
	/* Page Header - Centered above the two columns */
	.page-header {
		text-align: center;
		padding: var(--spacing-xl) 0 var(--spacing-3xl);
		max-width: var(--container-md);
		margin: 0 auto var(--spacing-3xl);
		border-bottom: 1px solid var(--border);
	}
	.page-header h1 {
		font-size: var(--text-5xl);
		line-height: var(--leading-tight);
		margin: 0 0 var(--spacing-md);
		color: var(--fg);
	}
	.page-description {
		font-size: var(--text-xl);
		line-height: var(--leading-relaxed);
		color: var(--fg-muted);
		margin: 0 0 var(--spacing-lg);
	}
	.page-meta {
		margin-bottom: var(--spacing-lg);
	}
	.page-meta time {
		font-size: var(--text-sm);
		color: var(--fg-muted);
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	/* Two Column Layout */
	.example-layout {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: var(--spacing-3xl);
		max-width: var(--container-lg);
		margin: 0 auto;
		align-items: start;
	}

	/* Main Content Column */
	.example-main {
		min-width: 0; /* Prevents grid overflow */
	}
	.example-content {
		width: 100%;
	}
	/* Header image styling */
	.example-header {
		margin: 0 0 var(--spacing-xl);
		overflow: hidden;
		border-radius: var(--radius-md);
	}
	.example-header-image {
		width: 100%;
		height: 300px;
		object-fit: cover;
		display: block;
		margin: 0 0 var(--spacing-xl);
	}

	/* Main content text styling */
	.example-text {
		font-size: var(--text-lg);
		line-height: var(--leading-relaxed);
		color: var(--fg);
	}
	.example-text h2 {
		font-size: var(--text-3xl);
		margin: var(--spacing-2xl) 0 var(--spacing-md);
		color: var(--fg);
	}
	.example-text h3 {
		font-size: var(--text-2xl);
		margin: var(--spacing-xl) 0 var(--spacing-lg);
		color: var(--fg);
	}
	.example-text h4 {
		font-size: var(--text-xl);
		margin: var(--spacing-lg) 0 var(--spacing-sm);
		color: var(--fg);
	}
	.example-text p {
		margin: 0 0 var(--spacing-2xl);
	}
	.example-text ul,
	.example-text ol {
		margin: var(--spacing-2xl) 0;
		padding-left: var(--spacing-2xl);
	}
	.example-text li {
		margin: var(--spacing-sm) 0;
	}
	.example-text blockquote {
		margin: var(--spacing-xl) 0;
		padding: var(--spacing-2xl);
		border-left: 4px solid var(--fg);
		background: var(--bg-muted);
		border-radius: 0 var(--radius-md) var(--radius-md) 0;
		font-style: italic;
	}
	/* Inline code styling */
	.example-text code {
		background: var(--bg-muted);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-size: 0.9em;
		font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
	}
	
	/* Code block styling - for ```code blocks in markdown */
	.example-text pre {
		background: var(--bg-muted);
		padding: var(--spacing-2xl);
		border-radius: var(--radius-md);
		overflow-x: auto;
		margin: var(--spacing-xl) 0;
		border: 1px solid var(--border);
		/* Ensure proper spacing for code blocks */
		white-space: pre;
		word-wrap: normal;
	}
	/* Code inside pre blocks - removes background and padding from inline code */
	.example-text pre code {
		background: none;
		padding: 0;
		font-size: 0.9rem;
		line-height: 1.5;
		border-radius: 0;
	}
	.example-text img {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-md);
		margin: var(--spacing-xl) 0;
	}
	/* Sidebar Styling */
	.example-sidebar {
		background: var(--bg-muted);
		border-radius: var(--radius-md);
		padding: var(--spacing-lg);
		border: 1px solid var(--border);
		height: fit-content;
		margin: 0 0 var(--spacing-xl);
	}
	.sidebar-section {
		margin-bottom: var(--spacing-2xl);
	}
	.sidebar-section:last-child {
		margin-bottom: 0;
	}
	.sidebar-section h2 {
		font-size: var(--text-lg);
		margin: 0 0 var(--spacing-md);
		color: var(--fg);
		border-bottom: 2px solid var(--accent-primary);
		padding-bottom: var(--spacing-sm);
	}
	.sidebar-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.sidebar-section li {
		margin-bottom: var(--spacing-sm);
		padding: var(--spacing-sm);
		background: var(--bg);
		border-radius: var(--radius-sm);
		border: 1px solid var(--border);
		transition: all 0.2s ease;
	}
	.sidebar-section li:hover {
		border-color: var(--accent-primary);
		background: var(--bg);
	}
	.sidebar-section a {
		color: var(--fg);
		text-decoration: none;
		display: block;
		font-size: var(--text-sm);
		line-height: var(--leading-normal);
	}
	.sidebar-section a:hover {
		color: var(--accent-primary);
		text-decoration: underline;
		text-decoration-color: var(--accent-primary);
		text-underline-offset: 0.2em;
		text-decoration-thickness: 2px;
	}

	/* Specific list styling */
	.wcag-list li {
		font-weight: 500;
	}

	.practices-list li,
	.benefits-list li {
		font-size: var(--text-sm);
		line-height: var(--leading-normal);
	}

	.resources-list li,
	.tools-list li {
		font-size: var(--text-sm);
	}
	.example-text a {
		color: var(--link);
		text-decoration: underline;
		text-decoration-color: var(--link-underline);
		text-underline-offset: 0.2em;
		text-decoration-thickness: 2px;
	}
	.example-text a:hover {
		color: var(--link-hover);
		text-decoration-color: var(--link-underline-hover);
		text-decoration-thickness: 3px;
	}
	/* Responsive Design */
	@media (max-width: 1024px) {
		.example-layout {
			grid-template-columns: 1fr;
			gap: var(--spacing-2xl);
		}
		
		.example-sidebar {
			position: static;
			order: 1; /* Move sidebar after main content on mobile */
		}
	}

	@media (max-width: 768px) {
		.page-header {
			padding: var(--spacing-lg) 0 var(--spacing-2xl);
		}
		
		.page-header h1 {
			font-size: var(--text-4xl);
		}
		
		.page-description {
			font-size: var(--text-base);
		}
		
		.example-header {
			margin: 0 0 var(--spacing-lg);
		}
		
		.example-header-image {
			height: 200px;
		}
		
		.example-text {
			font-size: var(--text-base);
		}
		
		.example-text h2 {
			font-size: var(--text-2xl);
		}
		
		.example-text h3 {
			font-size: var(--text-xl);
		}
		
		.example-sidebar {
			padding: var(--spacing-lg);
		}
		
		.sidebar-section h2 {
			font-size: var(--text-base);
		}
	}
</style> 