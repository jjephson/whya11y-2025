---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('articles');

// Sort articles by date (newest first)
const sortedArticles = articles.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BlogLayout title="Articles | WhyA11y">
	<section class="page-header">
		<h1>All Articles</h1>
		<p class="page-description">
			Explore our comprehensive guides on web accessibility best practices, techniques, and insights.
		</p>
	</section>
	<section class="articles-grid" id="articles-grid">
		{sortedArticles.map((article) => (
			<article class="article-card">
				<div class="article-content">
					<h2><a href={`/articles/${article.slug}`}>{article.data.title}</a></h2>
					<p class="article-description">{article.data.description}</p>
					<div class="article-meta">
						<time datetime={article.data.date}>{new Date(article.data.date).toLocaleDateString()}</time>
					</div>
				</div>
			</article>
		))}
	</section>
</BlogLayout>

<style>
	.page-header {
		text-align: center;
		padding: 2rem 0 3rem 0;
		max-width: 800px;
		margin: 0 auto;
	}
	.page-header h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--fg);
	}
	.page-description {
		font-size: 1.2rem;
		line-height: 1.6;
		color: var(--fg-muted);
	}
	.articles-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	.article-card {
		border: 1px solid var(--border);
		border-radius: 0.75rem;
		background: var(--bg);
		transition: all 0.2s ease;
		overflow: hidden;
	}
	.article-card:hover {
		border-color: var(--accent-primary);
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(30, 64, 175, 0.15);
	}
	.article-content {
		padding: 1.5rem;
	}
	.article-card h2 {
		margin: 0 0 0.75rem 0;
		font-size: 1.3rem;
		line-height: 1.3;
	}
	.article-card h2 a {
		color: var(--fg);
		text-decoration: underline;
		text-decoration-color: var(--accent-primary);
		text-underline-offset: 0.2em;
		text-decoration-thickness: 2px;
	}
	.article-card h2 a:hover {
		color: var(--accent-primary);
		text-decoration-color: var(--accent-primary);
		text-decoration-thickness: 3px;
	}
	.article-description {
		margin: 0 0 1rem 0;
		color: var(--fg-muted);
		line-height: 1.5;
		font-size: 0.95rem;
	}
	.article-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.article-meta time {
		font-size: 0.85rem;
		color: var(--fg-muted);
		font-weight: 500;
	}
	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}
		.page-description {
			font-size: 1rem;
		}
		.articles-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		.article-content {
			padding: 1.25rem;
		}
	}
</style> 