---
import BaseLayout from './BaseLayout.astro';

export interface Props {
	title?: string;
	description?: string;
}

const { title = 'WhyA11y', description = 'Making the web accessible for everyone. Learn about web accessibility, WCAG guidelines, and inclusive design practices.' } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<slot />
</BaseLayout> 