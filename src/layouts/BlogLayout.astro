---
import Header from '../components/Header.vue';
import Footer from '../components/Footer.astro';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{Astro.props.title || 'WhyA11y Blog'}</title>
    <style>
      :root {
        --bg: #fff;
        --fg: #000;
      }
      [data-theme="dark"] {
        --bg: #000;
        --fg: #fff;
      }
      html, body {
        background: var(--bg);
        color: var(--fg);
        margin: 0;
        padding: 0;
        font-family: system-ui, sans-serif;
        min-height: 100vh;
      }
      *, *:focus {
        outline-color: var(--fg);
      }
    </style>
  </head>
  <body>
    <Header />
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html> 