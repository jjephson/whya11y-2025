---
import BaseLayout from './BaseLayout.astro';

export interface Props {
	title: string;
	description: string;
	contentId?: string;
}

const { title, description, contentId = 'page-content' } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<section id={contentId} class="content-area">
		<slot />
	</section>
</BaseLayout>

<style>
	section {
		max-width: var(--container-md);
		margin: 0 auto;
		padding: 0;
	}
</style>
