---
export interface Props {
	title: string;
	description: string;
	href: string;
	date: string;
	className?: string;
	headingLevel?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
}

const { title, description, href, date, className = '', headingLevel = 'h2' } = Astro.props;
---

<article class={`content-card ${className}`}>
	{headingLevel === 'h1' && <h1><a href={href}>{title}</a></h1>}
	{headingLevel === 'h2' && <h2><a href={href}>{title}</a></h2>}
	{headingLevel === 'h3' && <h3><a href={href}>{title}</a></h3>}
	{headingLevel === 'h4' && <h4><a href={href}>{title}</a></h4>}
	{headingLevel === 'h5' && <h5><a href={href}>{title}</a></h5>}
	{headingLevel === 'h6' && <h6><a href={href}>{title}</a></h6>}
	<p>{description}</p>
	<time datetime={date}>{new Date(date).toLocaleDateString()}</time>
</article>

<style>
	.content-card {
		padding: var(--spacing-md);
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		background: var(--bg);
		transition: all 0.2s ease;
		overflow: hidden;
		min-height: 120px;
		display: flex;
		flex-direction: column;
	}
	.content-card:hover {
		border-color: var(--accent-primary);
		box-shadow: var(--shadow-lg);
	}
	.content-card h1,
	.content-card h2,
	.content-card h3,
	.content-card h4,
	.content-card h5,
	.content-card h6 {
		margin: 0 0 var(--spacing-sm) 0;
		font-size: var(--text-lg);
		line-height: var(--leading-normal);
	}
	.content-card h1 a,
	.content-card h2 a,
	.content-card h3 a,
	.content-card h4 a,
	.content-card h5 a,
	.content-card h6 a {
		color: var(--fg);
		text-decoration: underline;
		text-decoration-color: var(--accent-primary);
		text-underline-offset: 0.2em;
		text-decoration-thickness: 2px;
	}
	.content-card h1 a:hover,
	.content-card h2 a:hover,
	.content-card h3 a:hover,
	.content-card h4 a:hover,
	.content-card h5 a:hover,
	.content-card h6 a:hover,
	.content-card h1 a:focus,
	.content-card h2 a:focus,
	.content-card h3 a:focus,
	.content-card h4 a:focus,
	.content-card h5 a:focus,
	.content-card h6 a:focus,
	.content-card h1 a:active,
	.content-card h2 a:active,
	.content-card h3 a:active,
	.content-card h4 a:active,
	.content-card h5 a:active,
	.content-card h6 a:active {
		color: var(--text-on-accent);
		text-decoration-color: var(--text-on-accent);
		text-decoration-thickness: 3px;
	}
	.content-card p {
		margin: 0 0 var(--spacing-md) 0;
		color: var(--fg-muted);
		font-size: var(--text-sm);
		line-height: var(--leading-normal);
		flex: 1;
	}
	.content-card time {
		font-size: var(--text-xs);
		color: var(--fg-muted);
	}
</style>
